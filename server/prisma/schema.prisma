// This is my Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model 
model User {
  id              String           @id // Using the String ID from Clerk
  name            String
  email           String           @unique
  password        String?
  resume          String?          
  image           String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  jobApplications JobApplication[]
}


// Job model 
model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  location    String
  category    String
  level       String
  salary      Int
  date        BigInt // Using BigInt to store the numeric timestamp. DateTime is another option if you prefer.
  visible     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  
  companyId Int
  company   Company @relation(fields: [companyId], references: [id])
jobApplications JobApplication[]
}

// Company model
model Company {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique 
  image     String
  password  String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  jobs  Job[]
  jobApplications JobApplication[]
}

// JobApplication model 
model JobApplication {
  id        Int      @id @default(autoincrement())
  status    String   @default("Pending")
  date      BigInt
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- Relations ---
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  companyId Int
  company   Company  @relation(fields: [companyId], references: [id])

  jobId     Int
  job       Job      @relation(fields: [jobId], references: [id])
}