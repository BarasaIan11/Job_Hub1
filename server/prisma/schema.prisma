// This is my Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Job model translated 
model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  location    String
  category    String
  level       String
  salary      Int
  date        BigInt // Using BigInt to store the numeric timestamp. DateTime is another option if you prefer.
  visible     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation to the Company model
  companyId Int
  company   Company @relation(fields: [companyId], references: [id])
}

// Placeholder for your Company model
model Company {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique // This ensures no two companies can have the same email
  image     String
  password  String   // Note: Password will be stored in plain text. We'll handle hashing in the application code.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // This establishes the other side of the relationship: a Company can have many Jobs
  jobs  Job[]
}